{{#each errors}}
 <div class="error">  {{this}} </div>
{{/each}}

<form method="post" action="/user/register">
  <label> First Name </label>


  <!-- Please give every form widget a name. This is so that express can access the value from the form widget -->
  <input type="text" name="firstName" id="firstName" value="{{firstName}}"><br><br>

  <label> Last Name </label>
  <input type="text" name="lastName" id="lastName" value="{{lastName}}"><br><br>


  <label> Username </label>
  <input type="text" name="username" id="username" value="{{userName}}"><br><br>


  <label> Password </label>
  <input type="password" name="password" id="password"><br><br>

  <label> Confirm Password </label>
  <input type="password" name="cpassword" id="cpassword"><br><br>

 
  <input type="submit" value="Submit Form"><br><br>


</form>